{
    "name": "next-boilerplate",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "watch": "next dev",
        "build": "next build",
        "ba": "ANALYZE=true next build",
        "start": "PORT=3000 node server.js",
        "lint": "next lint",
        "format": "prettier --ignore-unknown --write \"src/**/*\"",
        "tsc": "tsc --noEmit --pretty",
        "subsetting": "node ./subset-fonts.js",
        "storybook": "storybook dev -p 6006",
        "test-storybook": "test-storybook",
        "build-storybook": "storybook build -o storybook",
        "test": "jest ./src --passWithNoTests",
        "test:ci": "jest ./src --passWithNoTests --ci --maxWorkers=1 --reporters=default --reporters=jest-junit --watchAll=false",
        "test:watch": "jest ./src --watch",
        "test:general": "npx playwright test tests/general/*",
        "test:general:ci": "dotenv -- npm run test:general",
        "test:lh": "npx playwright test tests/lighthouse/* --config=playwright.config.lighthouse.ts",
        "test:screenshot": "npx playwright test tests/screenshot/* --config=playwright.config.screenshot.ts",
        "test:screenshot:update": "npx playwright test tests/screenshot/* --config=playwright.config.screenshot.ts --update-snapshots",
        "test:all": "npm run test:lh && npm run test:general",
        "prepare": "cd .. && husky install frontend/.husky"
    },
    "browserslist": [
        "Android >= 10",
        "iOS >= 14",
        "Safari >= 14",
        "last 2 Edge versions",
        "last 2 Chrome versions",
        "last 2 ChromeAndroid versions",
        "last 2 Firefox versions",
        "last 2 Opera versions"
    ],
    "dependencies": {
        "@playwright/test": "^1.40.1",
        "@tanstack/react-query": "^5.52.2",
        "@tanstack/react-query-devtools": "^5.52.2",
        "@types/node": "^20.10.8",
        "@types/react": "^18.2.58",
        "@types/react-dom": "^18.2.19",
        "classnames": "^2.5.1",
        "dotenv": "^16.4.5",
        "dotenv-cli": "^7.3.0",
        "eslint": "^8.56.0",
        "eslint-config-next": "^13.5.6",
        "framer-motion": "^11.3.30",
        "jest-junit": "^16.0.0",
        "lodash.debounce": "^4.0.8",
        "matter-js": "^0.20.0",
        "next": "^13.5.6",
        "raw-loader": "^4.0.2",
        "react": "^18.3.1",
        "react-cookie": "^7.0.2",
        "react-dom": "^18.3.1",
        "recoil": "^0.7.7",
        "sass-loader": "^13.3.3",
        "sharp": "^0.33.5",
        "typograf": "^7.4.1",
        "validator": "^13.12.0"
    },
    "devDependencies": {
        "@davcri/webpack-glsl-loader": "^1.0.2",
        "@mdx-js/react": "^3.0.1",
        "@next/bundle-analyzer": "^13.5.6",
        "@storybook/addon-a11y": "^7.6.17",
        "@storybook/addon-actions": "^7.6.17",
        "@storybook/addon-designs": "^7.0.9",
        "@storybook/addon-docs": "^7.6.17",
        "@storybook/addon-essentials": "^7.6.17",
        "@storybook/addon-interactions": "^7.6.17",
        "@storybook/addon-links": "^7.6.17",
        "@storybook/addon-styling": "^1.3.7",
        "@storybook/jest": "^0.2.3",
        "@storybook/mdx2-csf": "^1.1.0",
        "@storybook/nextjs": "^7.6.17",
        "@storybook/react": "^7.6.17",
        "@storybook/test-runner": "^0.16.0",
        "@storybook/testing-library": "^0.2.2",
        "@svgr/webpack": "^8.1.0",
        "@testing-library/jest-dom": "^6.1.6",
        "@testing-library/react": "^14.1.2",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/html-validator": "^5.0.6",
        "@types/lodash.debounce": "^4.0.9",
        "@types/sharp": "^0.32.0",
        "@types/validator": "^13.12.0",
        "autoprefixer": "^10.4.17",
        "axe-core": "^4.8.4",
        "cssnano": "^6.0.5",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-storybook": "^0.6.15",
        "glslify-loader": "^2.0.0",
        "html-validator": "^6.0.1",
        "husky": "^8.0.3",
        "jest-environment-jsdom": "^29.7.0",
        "lighthouse": "^11.4.0",
        "lint-staged": "^15.2.2",
        "playwright": "^1.40.1",
        "postcss-clamp": "^4.1.0",
        "postcss-easings": "^4.0.0",
        "postcss-focus-visible": "^9.0.1",
        "postcss-focus-within": "^8.0.1",
        "postcss-font-display": "^0.3.0",
        "prettier": "^3.3.3",
        "sass": "^1.77.8",
        "storybook": "^7.6.17",
        "storybook-addon-swc": "^1.2.0",
        "tsconfig-paths-webpack-plugin": "^4.1.0",
        "typescript": "^5.5.4"
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "src/**/*.{md,mdx,css,scss}": "prettier --write"
    }
}
